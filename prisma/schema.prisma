generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // for local development
  url       = env("DATABASE_URL")
  // Optional: only used for Vercel
  directUrl = env("POSTGRES_URL")
}

enum Role {
  USER
  ADMIN
}

enum Skills {
  other
  programming
  scripting
  AppleScript
  Arduino
  Assembly
  Batch
  Bootstrap
  C
  CPP
  CryEngine
  Csharp
  CSS
  FORTRAN
  GameMaker
  Godot
  HTML
  Java
  JS
  Lisp
  Lumberyard
  MATLAB
  NextJS
  Pascal
  Perl
  PHP
  Python
  R
  React
  RenPy
  Ruby
  Rust
  Scratch
  SQL
  Swift
  Torque
  TS
  Unity
  Unreal
  XML
}

model User {
  id              Int           @id @default(autoincrement())
  email           String        @unique
  username        String        @unique
  password        String
  role            Role          @default(USER)
  firstName       String
  lastName        String
  image           String?
  phone           String?
  skills          Skills[]      @default([])
  contacts        User[]        @relation("UserContacts")
  contactsOf      User[]        @relation("UserContacts")
  projects        ProjectMembers[]
  adminProjects   Project[]     @relation("ProjAdmins")
  positions       Position[]    @relation("UserPosits")
  adminPositions  Position[]    @relation("PositAdmins")
  applics         Application[] @relation("UserApplics")
  availability    Int[]
  validation      Boolean       @default(false)
  validcheck      String?
  passchgcanx     String?
  validpasschg    String?
}

model Project {
  id        Int         @id @default(autoincrement())
  image     String?
  title     String
  descrip   String
  positions Position[]  @relation("ProjPosits")
  members   ProjectMembers[]
  admins    User[]      @relation("ProjAdmins")
  duedate   String
  skills    Skills[]    @default([])
}

model Position {
  id          Int       @id @default(autoincrement())
  image       String?
  title       String
  descrip     String
  skills      Skills[]  @default([])
  datestart   String
  dateend     String
  project     Project?  @relation("ProjPosits", fields: [projectId], references: [id])
  projectId   Int?
  admins      User[]    @relation("PositAdmins")
  member      User?     @relation("UserPosits", fields: [memberId], references: [id])
  memberId    Int?
  applics     Application[] @relation("PositApplics")
}

model Application {
  id          Int       @id @default(autoincrement())
  user        User?     @relation("UserApplics", fields: [userId], references: [id])
  userId      Int?
  position    Position? @relation("PositApplics", fields: [positionId], references: [id])
  positionId  Int?
  application String?
}

model ProjectMembers {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  role      String?

  @@unique([userId, projectId])
}
